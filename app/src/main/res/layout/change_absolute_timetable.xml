<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/change_absolute_layout"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_below="@+id/change_common_layout"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginStart="@dimen/dp40"
    android:layout_marginEnd="@dimen/dp30"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="@integer/weight_sum_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/expire_on"
            android:layout_width="0dp"
            android:layout_weight="@integer/weight_3"
            android:text="Rights will Expire on"
            android:textSize="@dimen/text_size_12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/abs_to_day"
            android:layout_width="0dp"
            android:text="09"
            android:textColor="@color/num_color"
            android:textSize="@dimen/text_size_21sp"
            android:layout_weight="@integer/weight_1"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="@integer/weight_2"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/abs_to_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September"
                android:textSize="@dimen/text_size_16sp"
                />
            <TextView
                android:id="@+id/abs_to_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:text="sat"
                android:textSize="@dimen/text_size_12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/abs_change"
            android:layout_marginStart="@dimen/dp20"
            android:layout_width="0dp"
            android:text="@string/Change"
            android:textColor="@color/watermark_change_color"
            android:layout_weight="@integer/weight_2"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/abs_count_day"
        android:text="12 Days"
        android:textSize="@dimen/text_size_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>