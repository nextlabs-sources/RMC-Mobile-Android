<?xml version="1.0" encoding="utf-8"?>
<com.skydrm.rmc.ui.widget.swipelayout.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    swipe:contentViewId="@+id/item_swipe_content_view_favorite"
    swipe:rightViewId="@+id/item_swipe_right_view_favorite">

    <include
        android:id="@+id/item_swipe_content_view_favorite"
        layout="@layout/item_swipe_content_view_favorite" />

    <include
        android:id="@+id/item_swipe_right_view_favorite"
        layout="@layout/item_swipe_right_view_favorite" />

</com.skydrm.rmc.ui.widget.swipelayout.SwipeMenuLayout>