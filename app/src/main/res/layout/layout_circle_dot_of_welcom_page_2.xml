<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/circle_dot_margin_right"
            android:src="@drawable/splash_activity_gray_dot_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/circle_dot_margin_right"
            android:src="@drawable/splash_activity_gray_dot_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/circle_dot_margin_right"
            android:src="@drawable/splash_activity_gray_dot_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/circle_dot_margin_right"

            android:src="@drawable/splash_activity_gray_dot_2" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_gray_dot_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/scroll_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_scroll_dot_2"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/scroll_dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_scroll_dot_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/scroll_dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_scroll_dot_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/scroll_dot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_scroll_dot_2"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/scroll_dot5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_activity_scroll_dot_2"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>