<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F3F5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp5"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/view_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/view_file"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp" />

            <Button
                android:id="@+id/view_file_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/view_file_info"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp" />

            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/share"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp" />

            <Button
                android:id="@+id/protect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/protect"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/mark_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/Make_as_favorite"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp" />

            <Button
                android:id="@+id/mark_offline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/Make_available_offline"
                android:textAllCaps="false"
                android:textColor="@color/sub_text_blue"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1_5"
                android:background="@android:color/white"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="@color/main_float_actionbtn_tint"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>