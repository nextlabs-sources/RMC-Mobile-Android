<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_green_light"
            android:text="@string/nickname"
            android:textAppearance="@android:style/TextAppearance.Widget.TextView"
            android:paddingStart="5dp"
            android:paddingRight="5dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="@integer/max_length_40"
            android:paddingStart="5dp"
            android:paddingRight="5dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_marginTop="5dp"
            style="@style/ProgressBar_Mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:max="100"
            android:indeterminate="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:weightSum="1.0">
        <Button
            android:id="@+id/btn_cancel"
            android:text="@string/common_cancel_initcap"
            android:textColor="@color/main_green_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:layout_weight="0.5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_ok_uppercase"
            android:textColor="@color/main_green_light"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:layout_weight="0.5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />
    </LinearLayout>



</LinearLayout>