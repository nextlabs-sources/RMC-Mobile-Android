<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/swipe_left_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/swipe_left_menu_btn_delete"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:contentDescription="@string/delete"
        android:src="@drawable/icon_delete"
        android:visibility="gone" />

    <Button
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="#307E3E"
        android:text="@string/share"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_activity_float_action_menu2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp10"
        android:weightSum="5">

        <TextView
            android:id="@+id/file_name_left_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18sp" />

        <TextView
            android:id="@+id/tv_sub_text_left_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp15"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>
</LinearLayout>