<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/file_thumbnail"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp3"
        android:layout_marginStart="@dimen/dp3"
        android:background="@android:color/transparent"
        android:padding="@dimen/dp8"
        android:src="@drawable/icon_bmp_nxl" />

    <RelativeLayout
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp60"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/dp6">

        <ImageView
            android:id="@+id/file_favorite_icon"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp5"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_favorite"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp60"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp6"
        android:background="@android:color/transparent"
        android:padding="@dimen/dp6">

        <ImageView
            android:id="@+id/file_offline_icon"
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dp5"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_offline"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/file_thumbnail"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp5">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="middle"
                android:gravity="start|center_vertical"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drive_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="MyDrive112222"
                    android:textColor="@color/sub_text_blue"
                    android:textSize="@dimen/text_size_14sp" />

                <!--<RelativeLayout-->
                <!--android:id="@+id/file_date_container"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="2">-->

                <!---->
                <!--</RelativeLayout>-->
                <TextView
                    android:id="@+id/file_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="4 Apri11111111111111111111"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="4 kb"
                    android:textColor="@color/sub_text_color"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp20"
        android:background="#ECECF1" />
</RelativeLayout>