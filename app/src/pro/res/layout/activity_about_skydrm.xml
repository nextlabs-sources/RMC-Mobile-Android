<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:navigationIcon="@drawable/icon_back_white"
        app:title="@string/about_skydrm_pro"
        app:titleTextColor="@android:color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/iv_nextlabs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp10"
        android:src="@drawable/skydrm_pro_logo" />

    <ImageView
        android:id="@+id/iv_nextlabs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp1"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_activity_company_name2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_nextlabs"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16sp" />

    <TextView
        android:id="@+id/to_nextlabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/copy_rights"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_14sp" />

    <FrameLayout
        android:id="@+id/subview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>